{
  "name": "ometra/hela-alize",
  "description": "Portability services and tools for the Auster application.",
  "license": "MIT",
  "authors": [
    {
      "name": "Equidna Development Team",
      "email": "dev@equidna.org"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "equidna/laravel-toolkit": "^1.0.3"
  },
  "autoload": {
    "psr-4": {
      "Ometra\\HelaAlize\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ometra\\HelaAlize\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Ometra\\HelaAlize\\HelaAlizeServiceProvider"
      ]
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92",
    "mockery/mockery": "^1.6",
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "phpunit/phpunit": "^10.0|^11.0",
    "phpstan/phpstan": "^2.0",
    "larastan/larastan": "3.0",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "format": "php-cs-fixer fix --config=.php-cs-fixer.php --verbose --allow-risky=yes",
    "format:check": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
    "analyze": "phpstan analyse --memory-limit=2G",
    "lint:phpcs": "phpcs --standard=phpcs.xml.dist",
    "lint:phpcbf": "phpcbf --standard=phpcs.xml.dist",
    "quality": [
      "@format:check",
      "@analyze",
      "@test"
    ]
  }
}
