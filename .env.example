# Environment Configuration for HELA Alize

# IDA Configuration
ALIZE_IDA_CODE=XXX

# NUMLEX SOAP Endpoint
ALIZE_NUMLEX_USER_ID=
ALIZE_NUMLEX_PASSWORD=
ALIZE_NUMLEX_ENDPOINT=https://soap.portabilidad.mx/api/np/processmsg

# TLS Certificates
ALIZE_TLS_CERT_PATH=/path/to/cert.pem
ALIZE_TLS_KEY_PATH=/path/to/key.pem
ALIZE_TLS_CA_PATH=/path/to/ca.pem

# XSD Schemas
ALIZE_XSD_PATH=/path/to/schemas

# SFTP Configuration
ALIZE_SFTP_HOST=
ALIZE_SFTP_PORT=22
ALIZE_SFTP_USER=
ALIZE_SFTP_KEY_PATH=
ALIZE_SFTP_DAILY_PATH=/ftp/<IDO>/outbound/dailyfiles

# Timer Overrides (optional - defaults shown)
ALIZE_T1_TIMEOUT_MINUTES=20
ALIZE_T3_TIMEOUT_HOURS=24
ALIZE_T4_TIMEOUT_HOURS=48
ALIZE_T5_TIMEOUT_HOURS=72

# Attachment Security (optional - defaults shown)
ALIZE_ATTACHMENT_MAX_SIZE_MB=10
ALIZE_ATTACHMENT_MAX_COUNT=10

# Retry & Circuit Breaker
ALIZE_RETRY_DELAY_MS=1000
ALIZE_CB_FAILURE_THRESHOLD=5
ALIZE_CB_OPEN_SECONDS=60
ALIZE_CB_HALF_OPEN_SUCCESSES=1
